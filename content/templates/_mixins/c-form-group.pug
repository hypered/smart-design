//-
    Mixin Form field - Create a form group, which wraps an input by default

mixin c-form-group({ label = 'Default label', id, helperText, helperTooltip, isFullWidth = false })
    .o-form-group
        if helperTooltip
            .o-form-group__label.o-form-group__label--with-helper
                label(for=id? id : '')= label
                +c-button({ size: 'small', layout: 'icon-only', icon: 'circle-help', skin: 'borderless-muted' })(type="button" data-tooltip="helper-"+id data-tooltip-placement="right") Show info
                .c-tooltip(role="tooltip" id="helper-"+id)
                    | #{helperTooltip}
                    .c-tooltip__arrow(data-popper-arrow)
        else
            label.o-form-group__label(for=id)= label

        .o-form-group__controls(class=isFullWidth? "o-form-group__controls--full-width" : "")
            block
            if helperText
                p.c-form-help-text=helperText
