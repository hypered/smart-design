extends /templates/_layouts/main

block append pageVariables
    - var bodyClass = "u-maximize-height u-overflow-hidden"

block body
    .c-app-layout(class=fullScroll? "u-scroll-vertical" : "")
        block global-banner

        header.u-position-relative
            include /templates/_includes/main-header--app

        main.u-maximize-width(class=!fullScroll? "u-scroll-wrapper" : "")
            block content
