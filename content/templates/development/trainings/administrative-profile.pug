                                    .o-grid-col-bp3-4.o-grid-col-bp3-static
                                        dl.c-key-value
                                            .c-key-value-item
                                                dt.c-key-value-item__key IBAN number
                                                dd.c-key-value-item__value BE327330449836XX

                                    .o-grid-col-bp3-4.o-grid-col-bp3-static
