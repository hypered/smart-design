extends /templates/_layouts/default

block append pageVariables
    - var moduleTitle = "Tools - Contracts"

block content

    .c-navbar.c-navbar--bordered-bottom
        .c-toolbar
            .c-toolbar__left
                .c-toolbar__item
                        h2.c-toolbar__title Contracts to be validated
    .c-navbar.c-navbar--bordered-bottom
        .c-toolbar
            .c-toolbar__left
                .c-toolbar__item
                    ul.c-filter-pill-list
                        li.c-filter-pill-list__item
                            +c-filter-pill({counter: '1'}) Start date
                        li.c-filter-pill-list__item
                            +c-filter-pill({}) Client
                        li.c-filter-pill-list__item
                            +c-filter-pill({}) Description
            .c-toolbar__right
                .c-toolbar__item
                    .o-form-group-layout.o-form-group-layout--inline
                        .o-form-group
                            label.o-form-group__label(for="sortOrder") Sort by
                            .o-form-group__controls
                                +c-select( { id: 'sortOrder', value: ['Start date ascending', 'Start date descending', 'Client ascending', 'Client descending']})

    .u-scroll-wrapper-body
        .u-spacer-l
            .o-panel-grid.small-up-2
                each val in [1,2,3,4,5,6]
                    +c-contract-card({
                            title: 'Amet minim mollit',
                            ref: '2021.NET.000000',
                            month: 'September 2021',
                            days: ['10','12','13'],
                            client: 'Client name',
                            status: 'Pending'

                    })


    .c-navbar.c-navbar--bordered-top
        .c-toolbar
            .c-toolbar__left
                .c-toolbar__item
                    p.c-body-2.u-text-muted 1 - 10 of 248 items
            .c-toolbar__right
                .c-toolbar__item
                    nav.c-pagination(aria-label='Page navigation')
                        ul.c-pagination__nav
                            li.c-pagination__item
                                +c-button({ href: '#', layout: 'icon-only', icon: 'chevron-left', skin: 'borderless'})(disabled)
                            li.c-pagination__item.c-pagination__item--active
                                a.c-pagination__link(href='#') 1
                            li.c-pagination__item
                                a.c-pagination__link(href='#') 2
                            li.c-pagination__item
                                a.c-pagination__link(href='#') 3
                            li.c-pagination__item
                                a.c-pagination__link(href='#') 4
                            li.c-pagination__item
                                a.c-pagination__link(href='#') 5
                            li.c-pagination__item
                                span.c-pagination__dots ...
                            li.c-pagination__item
                                a.c-pagination__link(href='#') 250
                            li.c-pagination__item
                                +c-button({ href: '#', layout: 'icon-only', icon: 'chevron-right', skin: 'borderless'})
