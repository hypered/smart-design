table.c-table.c-table--styled.c-table--bordered.js-data-table
    thead
        tr
            th Data
            th Data
            th Data
            th
                // Actions
    tbody
        each item, index in [1, 2, 3, 4]
            tr
                td Data
                td Data
                td Data
                td
                    .c-button-toolbar
                        +c-button({skin: 'borderless', icon: 'options-horizontal', layout: 'icon-only'})(data-dropdown-placement="bottom-end" data-dropdown="dropdownMenu-"+index) More options

                        ul.c-menu(id="dropdownMenu-"+index)
                            li.c-menu__item
                                a.c-menu__label(href="#")
                                    +icon('edit')
                                    span Edit
                            li.c-menu__divider(role="presentation")
                            li.c-menu__item
                                a.c-menu__label(href="#")
                                    +icon('delete')
                                    span Delete
                        +c-button({skin: 'borderless', icon: 'chevron-right', layout: 'icon-only'}) Go to detail
