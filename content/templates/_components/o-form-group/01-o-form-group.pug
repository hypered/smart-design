.o-form-group-layout.o-form-group-layout--standard

    .o-form-group
        label.o-form-group__label(for="nameId") Name
        .o-form-group__controls
            input.c-input(type="email" value="John Doe" id="nameId")

    .o-form-group
        label.o-form-group__label(for="emailId") Email address
        .o-form-group__controls
            input.c-input(type="email" value="user@name.com" id="emailId")

    .o-form-group
        label.o-form-group__label(for="passwordId") Password
        .o-form-group__controls
            .c-input-with-icon
                input.c-input#passwordId(type="password")
                button.c-input-with-icon__toggle(data-password-toggle)
                    +icon('eye')
                    +icon('eye-off')

    .o-form-group
        label.o-form-group__label(for="selectId") Preference
        .c-select-holder
            select.c-select(id="selectId")
                option Option A
                option Option B
                option Option C

    .o-form-group
        input.c-button.c-button--primary(type="submit" value="Save")
