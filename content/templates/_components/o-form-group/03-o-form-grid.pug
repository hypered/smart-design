.o-form-group-layout.o-form-group-layout--standard
    .u-spacer-bottom
        .o-grid
            .o-grid-col-6
                .o-form-group
                    label.o-form-group__label(for="formGridNameId") Name
                    .o-form-group__controls
                        input.c-input(type="email" value="John Doe" id="formGridNameId")

                .o-form-group
                    label.o-form-group__label(for="formGridEmailId") Email address
                    .o-form-group__controls
                        input.c-input(type="email" value="user@name.com" id="formGridEmailId")

            .o-grid-col-6
                .o-form-group
                    label.o-form-group__label(for="formGridPasswordId") Password
                    .o-form-group__controls
                        .c-input-with-icon
                            input.c-input(type="password" id="formGridPasswordId")
                            button.c-input-with-icon__toggle(data-password-toggle)
                                +icon('eye')
                                +icon('eye-off')

                .o-form-group
                    label.o-form-group__label(for="formGridSelectId") Preference
                    .c-select-holder
                        select.c-select(id="formGridSelectId")
                            option Option A
                            option Option B
                            option Option C

    .c-toolbar
        .c-toolbar__right
            .c-toolbar__item
                button.c-button.c-button--borderless Cancel
                input.c-button.c-button--primary(type="submit" value="Save")
