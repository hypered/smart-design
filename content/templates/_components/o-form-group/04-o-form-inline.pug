.o-form-group-layout.o-form-group-layout--inline

    .o-form-group
        label.o-form-group__label(for="inlineFormEmailId") Email address
        .o-form-group__controls
            input.c-input(type="email" value="user@name.com" id="inlineFormEmailId")

    .o-form-group
        label.o-form-group__label(for="inlineFormPasswordId") Password
        .o-form-group__controls
            .c-input-with-icon
                input.c-input(type="password" id="inlineFormPasswordId")
                button.c-input-with-icon__toggle(data-password-toggle)
                    +icon('eye')
                    +icon('eye-off')

    .o-form-group
        input.c-button.c-button--primary(type="submit" value="Save")
