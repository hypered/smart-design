.o-form-group-layout.o-form-group-layout--standard
    .o-form-group
        label.o-form-group__label Value
        .o-form-group__controls
            .c-checkbox-group
                .c-checkbox
                    label
                        input(type="checkbox")
                        | Checkbox
                .c-checkbox
                    label
                        input(type="checkbox" checked)
                        | Checkbox checked
                .c-checkbox
                    label
                        input(type="checkbox" disabled)
                        | Checkbox disabled
                .c-checkbox
                    label
                        input(type="checkbox" disabled checked)
                        | Checkbox disabled checked
                .c-checkbox
                    label
                        input#inputIndeterminate(type="checkbox")
                        | Checkbox indeterminate

script.
    var input = document.getElementById("inputIndeterminate");
    input.indeterminate = true;
    input.setAttribute('data-indeterminate', true);