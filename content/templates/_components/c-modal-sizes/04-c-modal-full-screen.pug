.c-modal-backdrop.c-modal-backdrop--visible(style="position:absolute;z-index:0;")

.c-modal.c-modal--fullscreen(role="dialog" aria-labelledby="modalTitle-04")
    .c-modal__header.c-modal__header--bordered
        .c-toolbar.c-toolbar--spaced
            .c-toolbar__left
                .c-toolbar__item
                    h2#modalTitle-04.c-modal__title Modal Window
            .c-toolbar__right
                .c-toolbar__item
                    button.c-button.c-button--borderless.c-button--icon(data-modal-close aria-label="Close dialog")
                        .c-button__content
                            +icon('close')

    .c-modal__body
        .u-spacer-l
            p Lorem ipsum dolor sit amet, consectetur adipisicing elit.

    .c-modal__footer.c-modal__footer--bordered
        .c-toolbar.c-toolbar--spaced
            .c-toolbar__right
                .c-toolbar__item
                    .c-button-toolbar
                        button.c-button.c-button--secondary(data-modal-close)
                                .c-button__content
                                    .c-button__label Cancel
                        button.c-button.c-button--primary(data-modal-close)
                                .c-button__content
                                    .c-button__label Save
